{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "webpack.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}